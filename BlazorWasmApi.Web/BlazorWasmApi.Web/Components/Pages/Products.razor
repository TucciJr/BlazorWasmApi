@page "/"

@if (ProductDtos == null)
{
    <DisplaySpinner />
}
else
{
    var productCount = ProductDtos.Count();

    <h3 class="mb-5">Products (@productCount)</h3>

    if (productCount > 0)
    {
        foreach (var productGroup in GetGroupedProductsByCategory())
        {
            <h4>@GetCategoryName(productGroup)</h4>

            <div class="row mt-3">
                <DisplayProducts Products="@productGroup.Take(4)"></DisplayProducts>
            </div>

            <hr class="mb-3" />
        }
    }
}